        @ViewData["a"]

    <article style="background-color:peachpuff;background-size:auto">       
   <form method="post">         
  <div  style="width:500px; margin-left:300px" >
      
    <h1>Register</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>

    
    <span asp-validation-for=UserId></span><br />
    <label><b>Enter User name</b></label>
    <input type="text" asp-for=UserName class="form-control">
    <span asp-validation-for=UserName></span><br />
    

    <label><b>Enter Password</b></label>
    <input type="password" asp-for=Userpassword class="form-control">
    <span asp-validation-for=Userpassword></span><br />

    <label><b>Confirm Password</b></label>
    <input type="password" asp-for=Userpassword class="form-control"><br><br>

    <label ><b>Enter Email-id</b></label>
    <input type="text" asp-for=EmailId class="form-control">
    <span asp-validation-for=EmailId></span><br />

    <label><b>Enter age</b></label>
    <input type="text" asp-for=Age class="form-control">
    <span asp-validation-for=Age></span><br />
    <label><b>Select Gender</b></label><br/>
 <label><b>Male </b></label> <input type="radio" asp-for=Gender value="true"  />
 <label><b>Female</b></label> <input type="radio" asp-for=Gender  value="false" /><br />
 <label><b>Enter Phone</b></label>
   <input type="text" asp-for=PhoneNumber  class="form-control"/>
    <span asp-validation-for=PhoneNumber></span><br />

   
    

    
   
    

    
    <hr>

    <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
    <button type="submit"@* class="registerbtn"*@  class="btn btn-success" style="text-align:center">Register</button>
  
  
  <div class="container signin"  style="text-align: center;">
    <p>Already have an account? <a href="#">Sign in</a>.</p>

  </div>
  </div>
  
  </form>
  </article>
  
  
  
  
  <div style="background-color:deeppink">

      



</div>