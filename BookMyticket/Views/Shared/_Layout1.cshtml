<html>
    <head>
        <style>
            .footer {
    background: #152F4F;
    color: white;
}
        </style>
        <title>Movies</title>
        <link rel = "stylesheet" href = "~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel = "stylesheet" href = "~/css/site.css" />
        <link rel="stylesheet" href="~/js/Javascript.js" asp-append-version="true" />
        <link rel="stylesheet" href="~/fontawe/css/all.css" />
       
    </head>
        <header>
            <img src = "~/images/moviebanner.jpeg" width = "1518px" height = "350px"/>
            <nav class="navbar navbar-expand-sm bg-dark navbar-dark sticky-top">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Book My Ticket</a>
                    <a type="button" class="btn btn-primary" asp-controller="Admin" asp-action = "home"> home </a>
                    
                    @if (Context.Session.GetString("uname") == null)
        {
             <a type="button" class="btn btn-primary" asp-controller="Admin"     asp-action = "admin"> Login </a>
       
        }
        else {
             <a type="button" class="btn btn-primary" asp-controller="Admin"      asp-action = "Logout"> Logout </a>

        }
                    <a type="button" class="btn btn-primary" asp-controller="Admin" asp-action = "Addmovie">Add movie</a>
                    <a type="button" class="btn btn-primary" asp-controller="Admin" asp-action = "checkseats"> Checkseats </a>
                    <a type="button" class="btn btn-primary" asp-controller="Admin" asp-action = "Getuserdetails"> User details </a>
                    <form method="get" asp-controller="User" asp-controller="Admin" asp-action="Search">
                        <br />
                          <input type="text" placeholder="Search..." name="tofind">
                          <button type="submit" ><i class="fa fa-search" asp-action="home"></i></button>
                    </form>
                </div>
            </nav>
            
        </div>
        <hr />
        
        </header>
        
          
        <article>
            

          @RenderBody()
        </article>

    <footer>
        <div class="mt-5 pt-5 pb-5 footer">
            <div class="container">
              <div class="row">
                <div class="col-lg-5 col-xs-12 about-company">
                  <h2>Movie ticket</h2>
                  <p class="pr-5 text-white-50">This website is about to book the seats of your favourite Movies in your favourite Theateres in your own city!! </p>
                  
                </div>
                <div class="col-lg-3 col-xs-12 links">
                  <h4 class="mt-lg-0 mt-sm-3">Links</h4>
                    <ul class="m-0 p-0">
                      <li>- <a href="#">Home</a></li>
                      <li>- <a href="#">Movies</a></li>
                      <li>- <a href="#">Tickets</a></li>
                      <li>- <a href="#">Login</a></li>
                      <li>- <a href="#">Register</a></li>
                      <li>- <a href="#">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 col-xs-12 location">
                  <h4 class="mt-lg-0 mt-sm-4">Location</h4>
                  <p>Bagmane Tech Park, Byrasandra Village, C V Raman Nagar, Bengaluru, Karnataka 560093</p>
                  <h4 class="mt-lg-0 mt-sm-4">Contact</h4>
                  <p class="mb-0"><i class="fa fa-phone mr-3">+91 9876543210</p>
                  <p><i class="fa fa-envelope-o mr-3"></i>movieticket@gmail.com</p>
                </div>
              </div>
              <div class="row mt-5">
                <div class="col copyright">
                  <p class=""><small class="text-white-50">© 2019. All Rights Reserved.</small></p>
                </div>
              </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Javascript.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</html>



